<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Secondary1"
    android:orientation="vertical"
    android:paddingTop="24dp"
    tools:context=".Profil">



    <ScrollView
        android:layout_width="424dp"
        android:layout_height="814dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/rubikmedium"
                android:text="Profil"
                android:textSize="20dp"
                android:textColor="@color/Secondary5"/>

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="120dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logosplashscreen"
                    app:shapeAppearanceOverlay="@style/roundImageView" />
                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="60dp">

                    <ImageButton
                        android:id="@+id/buttonedit"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profil_icons_edit"
                        android:contentDescription="Edit button"
                        android:minHeight="48dp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="383dp"
                android:layout_height="170dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/frame_blue_profile"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubikmedium"
                    android:text="Nama"
                    android:textColor="@color/Secondary5"
                    android:textSize="14sp">
                </TextView>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_1">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Rafy Djauhari"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Email"
                        android:textColor="@color/Secondary5"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_bg_1">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="rafydjauhari01@gmail.com"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="385dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubikmedium"
                    android:text="Pengaturan"
                    android:textColor="@color/Secondary5"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pengaturan"
                android:layout_width="384dp"
                android:layout_height="220dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="420dp"
                android:background="@drawable/frame_blue_profile"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_notifikasi"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_bg_1">

                    <ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/Primary"
                        android:contentDescription="Notification"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_baseline_circle_notifications_24"
                        tools:ignore="TouchTargetSizeCheck" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Notifikasi"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>

                    <ToggleButton
                        android:id="@+id/notificationToggle"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="190dp"
                        android:background="@color/Secondary3"
                        android:checked="false"
                        android:textOff="OFF"
                        android:textOn="ON"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_bahasa"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_bg_1">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/icon_bahasa">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Bahasa"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_bantuan"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_bg_1">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/icon_bantuan">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Bantuan"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_tentang"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_bg_1"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/button_bg_1"
                        android:src="@drawable/icon_tentang_app">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubikmedium"
                        android:text="Tentang Aplikasi"
                        android:textColor="@color/Secondary1"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:layout_below="@+id/pengaturan"
                android:layout_marginVertical="25dp"
                android:background="@drawable/bg_red">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_keluar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/rubikmedium"
                    android:text="Keluar"
                    android:textColor="@color/Secondary1"
                    android:textSize="16sp"
                    android:gravity="center" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>



