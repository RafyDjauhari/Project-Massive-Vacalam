<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHeaderCheckOut"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/Secondary1"
        android:elevation="4dp"
        android:title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_weight="1"
                android:fontFamily="@font/rubiksemibold"
                android:gravity="center"
                android:text="Pembayaran"
                android:textColor="@color/Secondary5"
                android:textSize="32sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textRincianPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rincian Pesanan"
        android:textSize="24dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rubiksemibold"
        android:textColor="#474545"
        android:layout_below="@id/toolbarHeaderCheckOut"/>
    <LinearLayout
        android:id="@+id/frameCheckout"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_below="@id/textRincianPesanan"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="#F4F5F7"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">
            <TextView
                android:id="@+id/nameAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak-Anak"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/nameDewasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dewasa"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/nameRincian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Pesanan"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"
                android:textColor="#474545"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">
            <TextView
                android:id="@+id/jumlahAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/jumlahDewasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/jumlahRincian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"
                android:textColor="#474545"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="18dp">
            <TextView
                android:id="@+id/pembayaranAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 50.000"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/pembayaranDewasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 50.000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/totalPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 100.000"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/rubikmedium"
                android:textSize="18sp"
                android:textColor="#EB0D0D"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/frameTunai"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_below="@+id/frameCheckout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="#F4F5F7"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/icon_tunai"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/rubikregular"
            android:text="Tunai"
            android:textColor="#000"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_checkout"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/frameTunai"
        android:layout_marginHorizontal="115dp"
        android:layout_marginVertical="100dp"
        android:background="@drawable/button_bg_1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubikmedium"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Pesan"
            android:textColor="@color/Secondary1"
            android:textSize="24sp">
        </TextView>
    </LinearLayout>

</RelativeLayout>